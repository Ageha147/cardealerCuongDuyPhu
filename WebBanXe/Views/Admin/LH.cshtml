@using WebBanXe.Models
@using PagedList.Mvc
@model PagedList.PagedList<WebBanXe.Models.LOAIHANG>

@{
    ViewBag.Title = "LH";
    Layout = "~/Views/Shared/_LayoutAdminBlank.cshtml";
}

<h2>Danh Sách Loại Hàng</h2>

<p>
    @Html.ActionLink("THÊM", "ThemLH")
</p>
<table class="table">
    <tr>
        <th style="width: 100px">
            Mã Loại
        </th>
        <th style="width: 100px">
            Tên Loại
        </th>
        <th>Tác Vụ (lưu ý khi xóa)</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaLoai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenLoai)
        </td>
        <td>
            @Html.ActionLink("Edit", "SuaLH", new { id=item.MaLoai  }) |
            @Html.ActionLink("Delete", "XoaLH", new {  id=item.TenLoai  })
        </td>
    </tr>
}

</table>

Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount;
<div style="display: inline">
    @Html.PagedListPager(Model, page => Url.Action("LH", new { page = page }))
</div>