@model WebBanXe.Models.KHACHHANG

@{
    ViewBag.Title = "XoaKH";
    Layout = "~/Views/Shared/_LayoutAdminBlank.cshtml";
}

<h2>Xóa Thông Tin Khách Hàng</h2>

<h3>Bạn muốn xóa khách hàng này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Khách Hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenKhachHang)
        </dd>

        <dt>
            Tài Khoản Khách Hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TaiKhoanKhachHang)
        </dd>

        <dt>
            Mật Khẩu Khách Hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MatKhauKhachHang)
        </dd>

        <dt>
            Mật Khẩu Nhập Lại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MatKhauNhapLai)
        </dd>

        <dt>
            Ngày Sinh
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>

        <dt>
            Địa Chỉ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaChi)
        </dd>

        <dt>
            Điện Thoại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DienThoai)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở về trang chính", "KH")
        </div>
    }
</div>
