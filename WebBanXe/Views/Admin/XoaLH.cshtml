@model WebBanXe.Models.LOAIHANG

@{
    ViewBag.Title = "XoaLH";
    Layout = "~/Views/Shared/_LayoutAdminBlank.cshtml";
}

<h2>Xóa Thông Tin Loại Hàng</h2>

<h3>Bạn có muốn xóa loại hàng này không (***)?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã Loại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaLoai)
        </dd>

        <dt>
            Tên Loại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenLoai)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở về trang chính", "LH")
        </div>
    }
</div>
