@using WebBanXe.Models
@using PagedList.Mvc;
@model PagedList.PagedList<WebBanXe.Models.MATHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUserPage.cshtml";
    /*if (Session["TaiKhoanKhachHang"] == null)
    {
        Layout = "~/Views/Shared/_LayoutUserPage.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutUserPageLogin.cshtml";
    }*/

}



<div class="main">

    <section class="container sbr clearfix">

        <!-- - - - - - - - - - - - - - - Content - - - - - - - - - - - - - - - - -->

        <section id="content" class="two-thirds column">

            <h3 class="widget-title">DANH MỤC XE MỚI</h3>

            <section id="change-items" class="item-grid">

                @foreach (var item in Model)
                {
                    <article>

                        <a href="@Url.Action("Details","Xe", new { id = @item.MaHang})" class="single-image picture video">
                            <img height="116" width="190" src="~/images/temp/@item.AnhBia" alt="">
                        </a>

                        <div class="detailed">

                            <h6 class="title-item">
                                <a href="@Url.Action("Details","Xe", new { id = @item.MaHang})">@item.TenHang</a>
                            </h6>

                            <span class="price">$@item.Gia</span>

                            <div class="clear"></div>

                            <ul class="list-entry">
                                <li><b class="label">Engine:</b><span>1.4i TS 5Dr</span></li>
                                <li><b class="label">Mileage:</b><span>75000</span></li>
                                <li><b class="label">Year:</b><span>2009</span></li>
                                <li><b class="label">Location:</b><span>New Jersey/ Newark</span></li>
                            </ul><!--/ .list-entry-->

                            <label class="compare"><input type="checkbox" />So sánh xe</label>
                            <a href="@Url.Action("Details","Xe", new { id = @item.MaHang})" class="button orange">Chi tiết</a>

                        </div><!--/ .detailed-->

                    </article>
                }
                <a href="@Url.Action("ToanBo","Xe")" class="see">Xem toàn bộ</a>

            </section><!--/ .item-grid-->

            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
            <div style="display: inline">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
            </div>

        </section><!--/ #content-->
        <!-- - - - - - - - - - - - - - end Content - - - - - - - - - - - - - - - - -->
        <!-- - - - - - - - - - - - - - - Sidebar - - - - - - - - - - - - - - - - -->
        <aside id="sidebar" class="one-third column">

            @Html.Action("LoaiSP", "Xe")

            @Html.Action("LoaiBody", "Xe")<!--/ .widget-container-->

            <div class="widget-container widget_recent_entries">

                <h3 class="widget-title">Sự kiện mới</h3>

                <ul>
                    <li><a href="#">Lorem ipsum dolor sit amet, consectetur adipisicing</a></li>
                    <li><a href="#">Ipsum dolor sit amet, consectetur adipisicing</a></li>
                    <li><a href="#">Set magna ipsum dolor sit amet, consectetur adipisicing</a></li>
                </ul>

                <a href="#" class="see">Xem toàn bộ sự kiện</a>

            </div><!--/ .widget-container-->

            <div>
                <!--quang cao-->

            </div>

        </aside><!--/ #sidebar-->
        <!-- - - - - - - - - - - - - end Sidebar - - - - - - - - - - - - - - - - -->

    </section>
</div>

