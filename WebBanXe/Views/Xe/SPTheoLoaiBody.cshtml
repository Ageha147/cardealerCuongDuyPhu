
@{
    ViewBag.Title = "SPTheoLoaiBody";
    Layout = "~/Views/Shared/_LayoutUsertList.cshtml";
}

@foreach (var xe in Model)
{
    <article>

        <a href="@Url.Action("Details","Xe", new { id = xe.MaHang })" class="single-image picture video">
            <img src="~/images/temp/@xe.AnhBia" alt="">
        </a>

        <div class="detailed">

            <h6 class="title-item">
                <a href="@Url.Action("Details","Xe", new { id = xe.MaHang })">@xe.TenHang</a>
            </h6>

            <span class="price">@xe.Gia</span>

            <div class="clear"></div>

            <ul class="list-entry">
                <li><b class="label">Đầu máy:</b><span>1.4i TS 5Dr</span></li>
                <li><b class="label">Dặm:</b><span>75000</span></li>
                <li><b class="label">Năm:</b><span>2009</span></li>
                <li><b class="label">Xuất xưởng:</b><span>New Jersey/ Newark</span></li>
            </ul><!--/ .list-entry-->

            <label class="compare"><input type="checkbox" />So sánh xe</label>
            <a href="@Url.Action("Details","Xe", new { id = xe.MaHang })" class="button orange">Chi tiết</a>

        </div><!--/ .detailed-->

    </article>
}